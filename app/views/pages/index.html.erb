<div class='posts-container'>
  <div class='row'>
    <div class='col-sm-12'>
      <h2>Latest posts</h2>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-8'>
      <% @users.each do |user| %>
        <% unless user.posts.empty? %>
          <h4 class='post-author'>
          <%= image_tag user.avatar.thumb.url, class: 'thumb-img' %>
          <% if logged_in? %>
            <%= link_to user.name, user_path(user.id) %>
          <% else %>
            <%= link_to user.name, login_path %>
          <% end %>
          </h4>
          <% user.posts.each do |post| %>
            <div>
              <blockquote>
                <p class='post'><%= post.content %></p>
              </blockquote>
              <p class='created-at'>Created: <%= post.created_at %></p>
              <% if post.created_at != post.updated_at %>
                <p>Updated: <%= post.updated_at %></p>
              <% end %>
            </div>
            <a class="btn btn-primary see-comments-btn" role="button" data-toggle="collapse" href="#commentCollapse-<%= post.id %>" aria-expanded="false" aria-controls="commentCollapse">see comments <span class='comments-count badge'><%= post.comments.count %></span></a>     
            <div class="collapse well comments-container" id="commentCollapse-<%= post.id %>">
              <% post.comments.each do |c| %>
                <p class='comment'><%= c.content %></p>
                <p class='comment-author'><%= c.user.name %></p>
                <span class='created-at'><%= c.created_at %></span>
              <% end %>
              <% if logged_in? %>
                <p class='btn btn-info add-comment-btn'><%= link_to 'Add Comment', new_post_comment_path(post_id: post.id), remote: true %></p>
                <div class='add-comment add-comment-post-<%= post.id %>'></div>
              <% else %>
                <p>Please log in to comment posts</p>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
