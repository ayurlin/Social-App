<% if @friend %>
  <h1><%= @friend.name %></h1>

  <p>Do you want to add <%= @friend.name %> ?</p>

  <%= form_for @user_friendship, method: :post do |form| %>
    <div class='form'>
    <%= form.hidden_field :friend_id, value: @friend.id %>
      <%= submit_tag 'Yes, I do', class: 'btn' %>
      <%= link_to 'No, I dont', user_path(@friend), class: 'btn' %>
    </div>
  <% end %>

<% end %>