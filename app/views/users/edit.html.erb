<div class='row'>
  <div class='col-sm-12'>
    <div class='edit-user-page'>
      <h1>Settings</h1>
      <div class='col-sm-3'>
        <%= image_tag(@user.avatar.thumb.url, class: 'normal-avatar') %>
      </div>
      <div class='col-sm-9'>
        <%= form_for(@user) do |f| %> 
          <%= render 'shared/error_messages' %>
          <div class='form-group'>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class='form-group'>
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class='form-group'>
            <%= f.label :gender %>
            <%= f.select :gender, User.genders.keys, class: 'form-control' %>
          </div>

          <% if !@user.avatar.blank? %>
            <div class='form-group'>
              <%= f.label :remove_avatar, 'Remove avatar' %>
              <%= f.check_box :remove_avatar, class: 'form-control' %>
            </div>
            <div class='form-group'>
              <%= f.label :avatar, 'Change Your avatar' %>
              <%= f.file_field :avatar, class: 'form-control' %>
            </div>
          <% else %>
            <div class='form-group'>
              <%= f.label :avatar, 'Add Your avatar' %>
              <%= f.file_field :avatar %>
            </div>
          <% end %>
            <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

